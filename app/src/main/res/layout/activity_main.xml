<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/txtUser01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Usuário 01"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txtQtdMensagens01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Qtd. de caracteres a serem enviadas para o usuário 2" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtQtdCarEnviarUsuario2"
            android:layout_width="91dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:text="0" />

        <Button
            android:id="@+id/btnEnviarUser01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enviar mensagem para usuário 2" />

    </LinearLayout>



    <TextView
        android:id="@+id/txtMensagemRecebidaUsuario02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mensagens recebida usuário 02" />

    <EditText
        android:id="@+id/edtMensagemRecebidaUsuario02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Texto de msg recebida" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtQtdTempoEnviomsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tempo envio mensagens: " />

        <TextView
            android:id="@+id/txtQtdTempoEnvio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000" />

        <TextView
            android:id="@+id/txtQtdTempoRecebmsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    Tempo receber mensagens: " />

        <TextView
            android:id="@+id/txtQtdTempoRecMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000" />


    </LinearLayout>


    <TextView
        android:id="@+id/txtSpace"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="    "
        android:textSize="30sp" />

    <TextView
        android:id="@+id/txtUser02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Usuário 02"
        android:textSize="30sp" />


    <TextView
        android:id="@+id/txtQtdMensagens02"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Qtd. de caracteres a serem enviadas para o usuário 1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtQtdCarEnviarUsuario1"
            android:layout_width="91dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="number"
            android:text="0" />

        <Button
            android:id="@+id/btnEnviarUser02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Enviar mensagem para usuário 1" />

    </LinearLayout>



    <TextView
        android:id="@+id/txtMensagemRecebidaUsuario01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mensagens recebida usuário 01" />

    <EditText
        android:id="@+id/edtMensagemRecebidaUsuario01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Texto de msg recebida" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="37dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtQtdTempoEnviomsgUser02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Tempo envio mensagens: " />

        <TextView
            android:id="@+id/txtQtdTempoEnvioUser02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000" />

        <TextView
            android:id="@+id/txtQtdTempoRecebmsgUser01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    Tempo receber mensagens: " />

        <TextView
            android:id="@+id/txtQtdTempoRecMsgUser01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="000" />


    </LinearLayout>






</LinearLayout>