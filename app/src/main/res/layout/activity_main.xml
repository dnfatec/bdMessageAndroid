<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/txtMensagemEnviada"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Digite a mensagem para ser enviada" />

    <EditText
        android:id="@+id/edtMensagemUser01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"

        android:inputType="textPersonName"
        android:text="Texto de exemplo" />

    <TextView
        android:id="@+id/txtQtdMensagens01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Informe a quantidade de mensagem para enviar ao usuário 2" />

    <EditText
        android:id="@+id/editTextTextPersonName3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="number"
        android:text="0" />

    <Button
        android:id="@+id/btnEnviarUser01"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Enviar mensagem para usuário 2" />

</LinearLayout>